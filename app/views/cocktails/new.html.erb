<div class="d-flex justify-content-center text-white my-5">
  <h1>Crie seu cocktail!</h1>
</div>

<div class="d-flex justify-content-center new-cocktail">
  
  <%= simple_form_for @cocktail do |f| %>
    <%= f.input :name %>
    <%= f.input :photo, as: :file, class: 'btn btn-danger' %>
    <%= f.submit class: 'btn btn-danger' %>
    <%= link_to 'Voltar', root_path, class: 'btn btn-danger' %>
  <% end %>
</div>